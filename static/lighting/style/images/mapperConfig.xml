<config>
    <endpoint>
    <id>lighting:style:images:png</id>
    <grammar>
      res:/lighting/style/images/
      <group name="file-name">
        <regex type="anything"/>.png
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/lighting/desk/style/images/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">image/png</literal>
    </header>
  </endpoint>
    <endpoint>
    <id>lighting:style:images:jpg</id>
    <grammar>
      res:/lighting/style/images/
      <group name="file-name">
        <regex type="anything"/>.jpg
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/lighting/desk/style/images/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">image/jpeg</literal>
    </header>
  </endpoint>
</config>